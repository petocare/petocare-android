<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:elevation="5dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/id_back"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_back_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/id_wishlist"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_wishlist"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">


            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/banner_rl_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmer_view_banner"
                        android:layout_width="123dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/shimmer_bg"
                        android:orientation="vertical"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:visibility="visible">

                        <!-- Adding 7 rows of placeholders -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include layout="@layout/data_placeholder_layout_new" />

                            <include layout="@layout/data_place" />

                            <include layout="@layout/data_place" />

                            <include layout="@layout/data_place" />

                            <include layout="@layout/data_place" />

                            <include layout="@layout/data_place" />

                            <include layout="@layout/data_place" />

                            <include layout="@layout/data_place" />

                            <include layout="@layout/data_place" />


                        </LinearLayout>

                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/banner_layout"
                        android:layout_width="123dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="visible"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:visibility="visible">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/banner_viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:listitem="@layout/item_promo_banner" />

                        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                            android:id="@+id/banner_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            app:dotsColor="@color/dotColor"
                            app:dotsCornerRadius="8dp"
                            app:dotsSize="6dp"
                            app:dotsSpacing="4dp"
                            app:dotsWidthFactor="2.5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/banner_viewpager"
                            app:progressMode="false"
                            app:selectedDotColor="@color/selectedDotColor" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pet_category_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/banner_rl_layout">

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/id_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/regular"
                        android:text="@string/sara_s_dog_food_chicken_a_milk_3kg_pack"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/id_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:text="Brand: Pedigree"
                        android:textColor="@color/common_text_color_grey"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/id_title" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/product_weight_recycler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/id_subtitle"
                        app:spanCount="3"
                        tools:itemCount="4"
                        tools:listitem="@layout/item_product_weight_layout" />

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/price_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="16dp"
                        android:text="₹586.00"
                        android:textColor="#252752"
                        android:textSize="22sp"
                        app:layout_constraintEnd_toStartOf="@id/discounted_price_id"
                        app:layout_constraintHorizontal_bias="0.003"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/product_weight_recycler" />

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/discounted_price_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginEnd="15dp"
                        android:text="₹686.00"
                        android:textColor="@color/common_text_color_grey"
                        android:textSize="14sp"
                        app:layout_constraintHorizontal_bias="0.3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/price_id"
                        app:layout_constraintTop_toBottomOf="@id/product_weight_recycler" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="20dp"
                        android:background="#F5F8FD"
                        app:layout_constraintTop_toBottomOf="@id/price_id" />

                    <TextView
                        android:id="@+id/about_itemId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginEnd="15dp"
                        android:text="About this item"
                        android:textAllCaps="true"
                        android:textColor="@color/common_text_color_grey"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.28"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider" />

                    <TextView
                        android:id="@+id/brandTitleId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginEnd="15dp"
                        android:text="Brand"
                        android:textColor="#6E778A"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.28"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/about_itemId" />

                    <TextView
                        android:id="@+id/brandValueId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginEnd="15dp"
                        android:text="Pedigree"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.58"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/about_itemId" />

                    <TextView
                        android:id="@+id/flavourTitleId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:text="Flavour"
                        android:textColor="#6E778A"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.28"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/brandTitleId" />

                    <TextView
                        android:id="@+id/flavourValueId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:text="Lamb"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.58"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/brandTitleId" />

                    <TextView
                        android:id="@+id/targetSpicesId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:text="Target Spices"
                        android:textColor="#6E778A"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.28"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/flavourTitleId" />

                    <TextView
                        android:id="@+id/targetSpicesValueId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:text="Dog"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.58"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/flavourTitleId" />

                    <TextView
                        android:id="@+id/packageInfoId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:text="Package \nInformation"
                        android:textAllCaps="false"
                        android:textColor="#6E778A"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.28"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/targetSpicesId" />

                    <TextView
                        android:id="@+id/packageValueId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:text="Bag"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.58"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/targetSpicesId" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="15dp"
                        android:background="@color/border_color_grey"
                        app:layout_constraintTop_toBottomOf="@id/packageInfoId" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="visible"
                        android:id="@+id/productDescriptionRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider2"
                        tools:itemCount="6"
                        tools:listitem="@layout/item_product_description_layout" />

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="20dp"
                        android:background="#F5F8FD"
                        app:layout_constraintTop_toBottomOf="@id/productDescriptionRecycler" />

                    <TextView
                        android:id="@+id/customer_reviewId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginEnd="15dp"
                        android:text="Customer Reviews"
                        android:textAllCaps="true"
                        android:textColor="@color/common_text_color_grey"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.28"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider3" />

                    <LinearLayout
                        android:id="@+id/rating_icon"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_round_background_yellow"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.05"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/customer_reviewId" >

                        <ImageView
                            android:layout_marginTop="3dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/ic_rating_star_white"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/ratingValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:text="4.6"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/customer_reviewId" />

                    <TextView
                        android:id="@+id/rating_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/book"
                        android:layout_marginTop="5dp"
                        android:text="501 ratings"
                        android:textColor="@color/common_text_color_grey"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.01"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rating_icon" />

                    <TextView
                        android:layout_marginTop="9dp"
                        android:id="@+id/small_bullet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/book"
                        android:text=" • "
                        android:textSize="10sp"
                        android:textColor="@color/common_text_color_grey"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.15"
                        app:layout_constraintStart_toStartOf="@id/rating_count"
                        app:layout_constraintTop_toBottomOf="@id/rating_icon" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/book"
                        android:layout_marginEnd="15dp"
                        android:text="24 Reviews"
                        android:textColor="@color/common_text_color_grey"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.06"
                        app:layout_constraintStart_toStartOf="@id/small_bullet"
                        app:layout_constraintTop_toBottomOf="@id/rating_icon" />

                    <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="15dp"
                        android:background="@color/border_color_grey"
                        app:layout_constraintTop_toBottomOf="@id/rating_count" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="visible"
                        android:id="@+id/reviewRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider4"
                        tools:itemCount="6"
                        tools:listitem="@layout/item_review_layout_for_product_details_screen" />

                    <View
                        android:id="@+id/divider5"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="20dp"
                        android:background="#F5F8FD"
                        app:layout_constraintTop_toBottomOf="@id/reviewRecycler" />

                    <TextView
                        android:id="@+id/similar_products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginEnd="15dp"
                        android:text="Similar Products"
                        android:textAllCaps="true"
                        android:textColor="@color/common_text_color_grey"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.28"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider5" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="visible"
                        android:id="@+id/similar_product_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/similar_products"
                        tools:itemCount="6"
                        tools:listitem="@layout/item_similar_product_layout" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent">
            <Button
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Add to cart"
                android:textColor="@color/black"
                android:background="@drawable/ic_rectangle_bg_black"
                android:layout_weight="1"/>
            <Button
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Buy Now"
                android:background="@drawable/ic_rectangle_blue_bg"
                android:layout_weight="1"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>