<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--        <item name="android:windowBackground">@drawable/splash_background</item>-->
    </style>

    <style name="ActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/primaryTextColorInvert</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="textAllCaps">false</item>
        <!--        <item name="cornerRadius">30dp</item>-->
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="TextStyle.Small.Thin">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="TextStyle.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="TextStyle.Large.Bold">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="TextStyle.Large.Bold.Navigation">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <color name="primaryTextColor">#2c2c2c</color>
</resources>